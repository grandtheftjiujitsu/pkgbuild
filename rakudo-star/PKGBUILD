pkgname=rakudo-star
pkgver=2017.07
pkgrel=3
pkgdesc="Rakudo Perl6 on MoarVM with additional modules"
arch=('i686' 'x86_64')
url='http://rakudo.org/'
license=(PerlArtistic)
depends=("nqp>=$pkgver")
makedepends=('perl>=5.8')
provides=('rakudo-star' 'rakudo-moarvm')
conflicts=('rakudo-star' 'rakudo-moarvm' 'rakudo-star-meta')
source=(http://rakudo.org/downloads/star/$pkgname-$pkgver.tar.gz)
sha512sums=('a8c2bec7999c20f7e92b02dafb75fcb495ca6605f9d31ffb9568fc8e5ae7925aae9ac47a6245f21d72f98cfe42a98aa5d1e080a559b1a058644b04b503269a9c')

build() {
  cd "$pkgname-$pkgver"
  perl Configure.pl --prefix=/usr --gen-moar --gen-nqp --backends=moar
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
