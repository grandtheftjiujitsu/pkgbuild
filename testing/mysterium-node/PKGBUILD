pkgname=mysterium-node
_name=node
pkgver=0.5.3
pkgrel=1
pkgdesc="Mysterium Node - VPN server and client for Mysterium Network"
arch=('any')
url="https://mysterium.network"
depends=('openvpn')
makedepends=('git')
optdepends=()
provides=('mysterium-node')
conflicts=('mysterium-node')
options=()
install=
source=(https://github.com/mysteriumnetwork/node/releases/download/"$pkgver"/myst_linux_amd64.tar.gz)
license=('GPL v3')
md5sums=('749aeab26013f668e083506926adcb30')

build() {
	cd "$srcdir"
}

package()
	mkdir -p "$pkgdir"/bin
	cd "$srcdir/$_name"
	install -D "$srcdir"/myst "$pkgdir"/bin/
#	make DESTDIR="$pkgdir/" install
}
